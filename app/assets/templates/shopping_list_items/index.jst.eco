<% for item in @shopping_list_items.models: %>

<li id="<%= item.get('id') %>" class="<%= if item.get('purchased') then 'purchased' %>"><input type="checkbox" class="checkbox" <%= if item.get('purchased') then "checked" %>/><span class="title"><%= item.get("name") %></span><%= item.get('quantity') %> <span class="delete-item">X</span></li>
  
<% end %>
